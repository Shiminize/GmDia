@import url('https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap');

body {
  font-family: 'Lato', sans-serif;
  background-color: var(--ivory-white);
  color: var(--graphite-black);
  margin: 0;
  padding: 0;
}

:root {
  /* Primary Palette */
  --ivory-white: #F9F9F9;
  --graphite-black: #1A1A1A;
  --champagne-beige: #EFE7DD;

  /* Accent Colors */
  --muted-blush: #F5DADF;
  --pale-sage: #DCEDE4;
  --digital-lavender: #CDB4DB;

  /* Functional Colors */
  --highlight-cta: var(--graphite-black);
  --highlight-cta-text: var(--ivory-white);
  --link-hover: var(--digital-lavender);
  --success-progress: var(--pale-sage);
}
